.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 10rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.status-icons text {
  margin-left: 12rpx;
}

.main-title {
  text-align: center;
  font-size: 36rpx;
  color: #ff7b5c;
  font-weight: 600;
  margin: 10rpx 0 20rpx;
}

.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0 10rpx;
}
.timer {
  font-size: 140rpx;
  font-weight: 700;
  font-family: 'Courier New', monospace;
  color: #2c3e50;
  line-height: 1.2;
}
.timer-state {
  font-size: 32rpx;
  color: #95a5a6;
  margin-top: 10rpx;
}

.tomato-count {
  text-align: center;
  font-size: 36rpx;
  color: #e67e22;
  margin: 15rpx 0 30rpx;
  font-weight: 500;
}

.options {
  background-color: #f1f3f5;
  border-radius: 32rpx;
  padding: 30rpx 24rpx;
  margin-bottom: 40rpx;
}
.option-group {
  margin-bottom: 30rpx;
}
.option-group:last-child {
  margin-bottom: 0;
}
.option-label {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
  display: block;
}
.option-buttons {
  display: flex;
  gap: 20rpx;
}
.option-button {
  flex: 1;
  background-color: #ffffff;
  border-radius: 60rpx;
  padding: 20rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #34495e;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}
.option-button.selected {
  background-color: #ff7b5c;
  color: white;
}
.option-button text {
  font-size: 28rpx;
}

.controls {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin: 20rpx 0 50rpx;
}
.control-btn {
  width: 240rpx;
  height: 88rpx;
  border-radius: 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.control-btn.start {
  background-color: #2ecc71;
  color: white;
}
.control-btn.reset {
  background-color: #ecf0f1;
  color: #34495e;
}
button::after {
  border: none;
}

.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  padding: 24rpx 0;
  border-top: 2rpx solid #edf2f7;
  margin-top: auto;
}
.footer-item {
  font-size: 32rpx;
  font-weight: 500;
  color: #95a5a6;
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  transition: 0.2s;
}
.footer-item.active {
  color: #ff7b5c;
  background-color: #fee9e5;
}

.custom-time {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.custom-time input {
  margin: 10rpx 0;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.custom-time button {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #007AFF;
  color: white;
  border-radius: 5rpx;
}

/* 选项容器样式 */
.options {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 15rpx;
}

/* 自定义输入区域 */
.custom-input {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.custom-input input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  background: white;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.custom-input button {
  margin-left: 15rpx;
  padding: 0 25rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #4a8cff;
  color: white;
  border-radius: 8rpx;
}
